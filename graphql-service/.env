# GraphQL Service Configuration
PORT=8085
NODE_ENV=development

# JWT Configuration (for future authentication middleware)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# External REST Services URLs
# Update these URLs according to your environment
AUTH_SERVICE_URL=http://localhost:8081/api/v1
PEDIDO_SERVICE_URL=http://localhost:8080/api/v1
FLEET_SERVICE_URL=http://localhost:8083/api/v1
BILLING_SERVICE_URL=http://localhost:8084/api/v1

# GraphQL Configuration
GRAPHQL_PATH=/graphql
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Logging
LOG_LEVEL=debug
